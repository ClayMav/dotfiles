{
    "// Window Settings": true,
    "editor.fontFamily": "Monaco, Hack, Menlo, 'Courier New', monospace",
    "editor.fontSize": 13,
    "terminal.integrated.fontSize": 14,
    "// Layout": true,
    "editor.minimap.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "// General": true,
    "git.autofetch": true,
    "workbench.preferredLightColorTheme": "Default Light+",
    "workbench.preferredDarkColorTheme": "Tokyo Night",
    "editor.formatOnSave": true,
    "terminal.integrated.scrollback": 10000,
    "search.followSymlinks": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "files.eol": "\n",
    "editor.fontLigatures": false,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "update.showReleaseNotes": false,
    "window.autoDetectColorScheme": true,
    "githubPullRequests.terminalLinksHandler": "github",
    "githubPullRequests.pullBranch": "never",
    "terminal.explorerKind": "external",
    "explorer.fileNesting.patterns": {
        ".prettierrc": ".prettierignore",
        ".gitignore": ".gitattributes",
        ".eslintrc.json": ".eslintignore",
        ".eslintrc": ".eslintignore"
    },
    "editor.detectIndentation": false,
    "// Language Settings": true,
    "eslint.format.enable": true,
    "[typescript][typescriptreact][css][javascript][javascriptreact][mdx]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.formatOnSave": false
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "// Python": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.fixAll": [
        "source.unusedImports",
        "source.convertImportFormat"
    ],
    "python.analysis.autoImportCompletions": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "go.alternateTools": {
        "go": "/run/current-system/sw/bin/go"
    },
    "makefile.configureOnOpen": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "go.toolsManagement.autoUpdate": true,
    "rust-analyzer.cargo.extraEnv": {
        "MACOSX_DEPLOYMENT_TARGET": "10.13"
    },
    "terminal.integrated.automationProfile.osx": {
        "path": "/etc/profiles/per-user/clay/bin/zsh"
    },
    "terminal.integrated.profiles.osx": {
        "nix-zsh": {
            "path": "/etc/profiles/per-user/clay/bin/zsh",
            "args": [
                "-l"
            ]
        }
    },
    "terminal.integrated.defaultProfile.osx": "nix-zsh",
    "security.promptForLocalFileProtocolHandling": false,
    "python.terminal.activateEnvironment": false,
    "cursor.cpp.disabledLanguages": [],
    "json.schemaDownload.enable": true,
    "cursor.enable_git_worktrees_setting": true,
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "chat.mcp.autostart": "newAndOutdated",
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "chat.todoListTool.enabled": true,
    "chat.todoListTool.writeOnly": true,
    "inlineChat.enableV2": true,
    "chat.edits2.enabled": true,
    "chat.emptyState.history.enabled": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.chat.edits.temporalContext.enabled": true,
    "chat.agent.maxRequests": 100,
    "github.experimental.multipleAccounts": true,
    "workbench.startupEditor": "none",
    "git.blame.editorDecoration.enabled": true,
    "redhat.telemetry.enabled": false,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.executePrompt.enabled": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.languageContext.typescript.items": "double",
    "github.copilot.chat.completionsFetcher": "node-fetch",
    "github.copilot.chat.nesFetcher": "node-fetch",
    // "chat.tools.global.autoApprove": true
    "chat.tools.terminal.autoApprove": {
        // --- 1. PYTHON & UV ECOSYSTEM ---
        // Allow all uv commands (sync, add, remove, run, venv, pip)
        "/^uv\\b/": true,
        "/^pre-commit\\b/": true,
        // --- 1.1 BUN & NEXT.JS ECOSYSTEM ---
        // Allow bun commands (install, add, remove, run)
        "/^bun\\b/": true,
        // --- 2. STANDARD FILE OPERATIONS (The "Nag Reduction" Layer) ---
        // Safe to run without asking: listing, reading, creating, moving
        "/^ls\\b/": true,
        "/^cat\\b/": true,
        "/^mkdir\\b/": true,
        "/^touch\\b/": true,
        "/^cp\\b/": true,
        "/^mv\\b/": true,
        "/^pwd\\b/": true,
        "/^echo\\b/": true,
        "/^head\\b/": true,
        "/^tail\\b/": true,
        // --- 3. GIT OPERATIONS ---
        // Read-only git is always safe
        "/^git (status|diff|log|show|branch|checkout|switch|fetch|pull)\\b/": true,
        // "Add" and "Commit" are usually safe to auto-approve because they are local and reversible
        "/^git (add|commit)\\b/": true,
        // NOTE: 'git push' is intentionally NOT included (safer to manual approve pushes)
        // --- 4. SEARCH & UTILITIES ---
        "/^grep\\b/": true,
        "/^find\\b/": true,
        "/^whoami\\b/": true,
        "/^which\\b/": true,
        "/^tree\\b/": true,
        // --- 5. SAFETY GUARDRAILS (Explicit Blocks) ---
        // Dangerous commands that should ALWAYS require manual approval
        "/^rm\\b/": false, // Never auto-delete files
        "/^sudo\\b/": false, // Never auto-escalate privileges
        "/^ssh\\b/": false, // Never auto-connect to remote servers
        "/^curl\\b/": false, // Avoid auto-downloading scripts (unless via uv/pip)
        "/^wget\\b/": false
    },
    "scm.repositories.selectionMode": "multiple",
    "terminal.integrated.suggest.enabled": false,
    "git.replaceTagsWhenPull": true,
    "python.defaultInterpreterPath": "/usr/bin/python3"
}