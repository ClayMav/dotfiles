# Authenticate terminal
auth () {
  if ! mwinit -l >> /dev/null; then
     mwinit;
  fi
  {{- if contains "dev-dsk" (output "hostname") }}
  # If on Cloud desktop, kerberos has to do be done via command line
  if ! klist -s ; then
      kinit -f -l 1d -r 30d
  fi
  {{- end }}
}
auth

# Add ssh keys to ssh-agent
if [ -z "$SSH_AUTH_SOCK" ] ; then
  eval `ssh-agent -s`
  ssh-add ~/.ssh/id_rsa
fi
